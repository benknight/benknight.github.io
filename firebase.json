{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "headers": [
      {
        "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }],
        "source": "**"
      }
    ],
    "redirects": [],
    "rewrites": [
      {
       "source": "/getLocations",
       "function": "getLocations"
      },
      {
       "source": "/postLocation",
       "function": "postLocation"
      }
    ]
  }
}
